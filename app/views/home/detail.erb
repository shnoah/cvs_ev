<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
     
        <legend><h1><font color="#DD4814"><strong><%= @this_post.post_title %></strong></font></h1></legend>
     
        <div class="row">
            <div class="col-lg-6">
            <img class="img-responsive" src="<%= @this_post.my_image.url %>">
            </div>
     
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                    <a href="#" class="btn  btn-lg btn-primary disabled">  
                        <%if @this_post.store_info == "CU"%>
                            CU
                        <%elsif @this_post.store_info == "GS25"%>
                            GS25
                        <%elsif @this_post.store_info == "seveneleven"%>
                            세븐일레븐
                        <%else%>
                            기타
                        <%end%>
                    </a>
                    
                    <a href="#" class="btn  btn-lg btn-success disabled">  
                        <%if @this_post.prefer_time == "morning"%>
                            아침
                        <%elsif @this_post.prefer_time == "lunch"%>
                            점심
                        <%elsif @this_post.prefer_time == "dinner"%>
                            저녁/야식
                        <%else%>
                            ?????
                        <%end%>
                    </a>
                    
                    <a href="#" class="btn  btn-lg btn-warning"><font color=white>
                       <%if @this_post.price.length >= 4%>
                            <%=@this_post.price.insert(1, ',') %>
                        <%else%>
                            <%=@this_post.price%>
                        <%end%>
                    원</font></a>
                    
                    <a href="#" class="btn  btn-lg btn-info"><%=@this_post.kcal%>kcal</a>
                    </div>
                </div>
                
                
                <div class=row style="height:5px"></div> <!-- 여백 -->
                
                <div class="col-lg-12 well well-lg">
                    <%= @this_post.post_content %>
                    <div style="text-align:right;font-size:10pt;">ID : <strong><%= @this_post.post_name %></strong><br>
                    <%= @this_post.updated_at.in_time_zone("Seoul").strftime("%y/%m/%d %I:%M%p")%></p>
                    </div>
                
                    <div style="float: right;">
                        <a href= "/home/modify/<%= @this_post.id%>" class="btn btn-primary btn-sm" role="button">글 수정</a>
                        <a href = "/home/delete/<%= @this_post.id%>" class="btn btn-primary btn-sm" role="button">글 삭제</a>
                    </div>
                </div>
                
                <!-- 리플 입력 창 -->
                
                   <form action = "/home/write_reply/" method="POST">
                       <input type = "hidden" name = "review_id" value = "<%=@this_post.id%>">
                       <div class="col-sm-10" style="padding;0px">
                               <input class="form-control"  placeholder="리플을 달아주세요" type = "text" name="myreply">
                       </div>
                       <div class="col-sm-2">
                            <input class="btn btn-primary" type = "submit" value = "Reply">
                       </div>
                   </form>
                
                <!-- 리플 출력 창 -->
                <% @this_post.replies.each do |r| %>
        
                <div class=row>
                    <div class="col-sm-10">
                        <h4>USER / <%= r.content %></h4>
                    </div>
                    <div class="col-sm-2" style="text-align:right;font-size:10pt;">
                        <%= r.created_at.in_time_zone("Seoul").strftime("%y/%m/%d %I:%M%p") %>
                        <a href= "/kanu/modify_reply/<%= r.id %>">수정 / </a>
                        <a href = "/kanu/delete_reply/<%= r.id %>">삭제</a>
                   </div>
                </div>
                
                <hr>
            
                 <% end %>
                       
                
            </div>
        </div>
    </div>
    <div class="col-lg-1"></div> 
</div>


<div class=row style="height:5px"></div> <!-- 여백 -->  

<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
    <!-- Buttons --> 
    <center>
    <a href="/" class="btn btn-primary" role="button">메인으로</a>
    </center>
    </div>
    <div class="col-sm-4"></div>
</div>

<div style="height:100px;"></div> <!-- footer 여백 -->





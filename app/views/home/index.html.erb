      <div class="row">
        <% @posts.each do |item| %>
          <div class="col-md-3 col-md-offset-0 col-sm-12 col-xs-12 col-xs-offset-0">
            <a href="/home/detail/<%=item.id%>">
              <div class="thumbnail">
                <%if item.my_image.url==nil%>
                  <img style="border-radius: 20px; width: 100%;" src="/image/sample.png"/>
                <% else %> 
                  <div class="photo_main">
                      <img style="border-radius: 20px; " src="<%=item.my_image.url(:thumb)%>"/>   
                          <div class='photo_main_up'>
        
                                       <div class="col-lg-12">
                                                <a href="#" class="btn  btn-lg btn-primary">  
                                                    <%if item.store_info == "CU"%>
                                                        CU
                                                    <%elsif item.store_info == "GS25"%>
                                                        GS25
                                                    <%elsif item.store_info == "seveneleven"%>
                                                        세븐일레븐
                                                    <%else%>
                                                        기타
                                                    <%end%>
                                                </a>
                                                
                                                <a href="#" class="btn  btn-lg btn-success">  
                                                    <%if item.prefer_time == "morning"%>
                                                        아침
                                                    <%elsif item.prefer_time == "lunch"%>
                                                        점심
                                                    <%elsif item.prefer_time == "dinner"%>
                                                        저녁/야식
                                                    <%else%>
                                                        ?????
                                                    <%end%>
                                                </a>
                                                
                                                <a href="#" class="btn  btn-lg btn-warning"><font color=white><%=item.price%>원</font></a>
                                                
                                                <a href="#" class="btn  btn-lg btn-info"><%=item.kcal%>kcal</a>
                                     </div>
                                     
                                    
                                    
                                    </div>
                      
                     
                  </div>
                <% end %>
                
                <div class="caption" style="padding-bottom: 0px;">
              
                  <!-- title -->
                  <% unless item.post_title.length > 14 %>
                    <h4 style="font-weight: 800; color:#DD4814;letter-spacing: 0px;"><%= item.post_title %></h4>
                  <% else %>
                    <h4 style="font-weight: 800; color:#DD4814;letter-spacing: 0px;"><%= item.post_title.first(13)+"..." %></h4>
                  <% end %>
                  
                  <!-- content -->
                  <div style="width:100%;height:20px">
                  <h5 style="word-spacing: -2px; font-weight: 400; letter-spacing: 0px; color: black;font-size:100%" ><%= item.post_content.first(20)%></h5>
                  </div>
                  <div style="margin-top: 1px solid white;"></div>
                  <div style="font-weight: 700; color: *8E8E8E; margin-bottom: 1px solid black;">  
                         <div style="width:100%;height:20px"></div>
                   </div>
               
                   <!--Like -->
                  <div> 
                  <hr style="margin: 13px 0px 13px 0px;">
                    <div align="center">
                      &nbsp;<span style="font-size: 15px; padding-top: 10px; font-weight: 800;"><%= item.like %>&nbsp; </span>
                    </div>
                  </div>
                  
                </div> <!-- caption ends here-->
                
              </div>
            </a>
          </div>
         <% end %>
      </div>

